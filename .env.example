DEBUG=false
DJANGO_SECRET_KEY=your-secret-key-here-generate-with-django
OPENAI_API_KEY=your-openai-api-key-here

# For Render deployment, add your Render URL
# Example: ALLOWED_HOSTS=procure2pay.onrender.com,localhost,127.0.0.1
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS settings - add your frontend URL if hosted separately
# For same-origin deployment (frontend and backend on same domain), this can be empty
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Database (production)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=procure2pay
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_HOST=db
DB_PORT=5432

# Email (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=your-email@gmail.com

# Frontend API URL (optional - only needed if frontend is hosted separately)
# Leave empty or unset for same-origin deployment
# VITE_API_BASE_URL=https://your-backend.onrender.com
